@page
@model PresetsModel
@{
    ViewData["Title"] = "Saved Presets";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-bookmark me-1"></i>
                    Saved Screening Presets
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    Quick access to popular screening strategies and custom configurations.
                </p>

                <!-- Built-in Presets -->
                <div class="row g-3">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-success">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-gem"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">Value Stocks</h6>
                                        <small class="text-muted">Conservative picks</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Low P/E ratios (5-15), market cap over $1B. Sorted by P/E ratio ascending.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener?preset=value" class="btn btn-success btn-sm">
                                        <i class="bi bi-search me-1"></i>Run Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-info">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-cpu"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">Large Tech</h6>
                                        <small class="text-muted">Technology giants</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Technology sector stocks with market cap over $10B. Sorted by market cap descending.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener?preset=tech" class="btn btn-info btn-sm">
                                        <i class="bi bi-search me-1"></i>Run Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-warning">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-warning text-dark d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-bar-chart"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">High Volume</h6>
                                        <small class="text-muted">Active trading</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Stocks with daily volume over 10M. Sorted by volume descending.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener?preset=volume" class="btn btn-warning btn-sm">
                                        <i class="bi bi-search me-1"></i>Run Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-primary">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-graph-up"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">Growth Stocks</h6>
                                        <small class="text-muted">Mid to large cap</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Market cap over $2B with decent volume (1M+). Sorted by market cap descending.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener?preset=growth" class="btn btn-primary btn-sm">
                                        <i class="bi bi-search me-1"></i>Run Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-dark">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-building"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">Mega Caps</h6>
                                        <small class="text-muted">$200B+ giants</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Largest companies with market cap over $200B. Sorted by market cap descending.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener?preset=large-cap" class="btn btn-dark btn-sm">
                                        <i class="bi bi-search me-1"></i>Run Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-sliders"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">Custom Screen</h6>
                                        <small class="text-muted">Build your own</small>
                                    </div>
                                </div>
                                <p class="card-text small">
                                    Create a custom screening configuration with your own criteria and filters.
                                </p>
                                <div class="d-grid">
                                    <a href="/Screener" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-plus-circle me-1"></i>New Screen
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Recent Searches -->
                <div class="row">
                    <div class="col-12">
                        <h6 class="mb-3">
                            <i class="bi bi-clock-history me-1"></i>
                            Quick Access
                        </h6>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/Screener?minMarketCap=10000000000&sortBy=MarketCap&sortDescending=true" 
                               class="btn btn-outline-primary btn-sm">
                                Large Cap Only
                            </a>
                            <a href="/Screener?maxPE=20&minMarketCap=1000000000&sortBy=PERatio" 
                               class="btn btn-outline-success btn-sm">
                                Reasonable P/E
                            </a>
                            <a href="/Screener?minVolume=5000000&sortBy=Volume&sortDescending=true" 
                               class="btn btn-outline-warning btn-sm">
                                Active Stocks
                            </a>
                            <a href="/Screener?sector=Technology&minMarketCap=1000000000" 
                               class="btn btn-outline-info btn-sm">
                                Tech Stocks
                            </a>
                            <a href="/Screener?sector=Healthcare&minMarketCap=5000000000" 
                               class="btn btn-outline-danger btn-sm">
                                Healthcare
                            </a>
                            <a href="/Screener?minPrice=50&maxPrice=200&minVolume=1000000" 
                               class="btn btn-outline-secondary btn-sm">
                                $50-200 Range
                            </a>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mt-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Pro Tip:</strong> Bookmark screener URLs with your favorite criteria to create instant access to custom screens.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    transition: all 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.btn {
    transition: all 0.2s ease-in-out;
}
</style>